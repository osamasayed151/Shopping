<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Shopping" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/welcome_Color</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--    splash Shopping-->
    <style name="RedHUGEText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/splash_shopping</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/aclonica</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--    splash Welcome-->
    <style name="RedHUGETextWelcome" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/splash_shopping</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/aclonica</item>
    </style>

    <!--    login ProgressBar-->
    <style name="ProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateTint">@color/design_default_color_primary</item>
    </style>

    <!--    login my TextInputLayout-->
    <style name="myTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="endIconMode">clear_text</item>
        <item name="errorEnabled">true</item>
        <item name="maxLines">1</item>
        <item name="textOutlineColor">@color/design_default_color_primary</item>
    </style>

    <!--    login my TextInputEditText-->
    <style name="myTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="maxLines">1</item>
    </style>

    <!--    login my button -->
    <style name="authanticationButtons" parent="@android:style/Widget.Button">
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="textAllCaps">false</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!--    login my button2 -->
    <style name="authanticationButtons2" parent="@android:style/Widget.Button">
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="textAllCaps">false</item>
        <item name="colorPrimary">@color/welcome_Color</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!--    custom tool bar -->
    <style name="MyToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="background">@color/welcome_Color</item>
    </style>

    <!--    custom spinner-->
    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--    custom style Search menu -->
    <style name="MenuItemStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">0dip</item>
        <item name="elevation">0dp</item>
        <item name="android:paddingStart">3dip</item>
        <item name="android:paddingEnd">5dip</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <!--    account button -->
    <style name="accountButtons" parent="@android:style/Widget.Button">
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="textAllCaps">false</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/black</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>